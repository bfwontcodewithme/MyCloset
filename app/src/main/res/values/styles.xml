<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ===== TEXT STYLES ===== -->
    <style name="MyCloset.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyCloset.Caption" parent="TextAppearance.Material3.BodySmall">
        <!-- FIX: was md_onSurfaceVariant -->
        <item name="android:textColor">@color/pink_on_surface_variant</item>
    </style>

    <!-- ===== CARD ===== -->
    <style name="MyCloset.Card" parent="Widget.Material3.CardView.Filled">
        <item name="shapeAppearanceOverlay">@style/MyCloset.Shape.Rounded.L</item>
    </style>

    <style name="MyCloset.Shape.Rounded.L" parent="ShapeAppearance.Material3.Corner.ExtraLarge">
        <item name="cornerSize">@dimen/radius_l</item>
    </style>

    <!-- ===== BUTTON ===== -->
    <style name="MyCloset.Button" parent="Widget.Material3.Button">
        <item name="cornerRadius">@dimen/radius_m</item>
        <item name="android:minHeight">52dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MyCloset.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">@dimen/radius_m</item>
        <item name="android:minHeight">52dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- ===== TEXT FIELD ===== -->
    <style name="MyCloset.TextField" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">@dimen/radius_m</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radius_m</item>
        <item name="boxCornerRadiusBottomStart">@dimen/radius_m</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/radius_m</item>

        <!-- FIX: was md_outline -->
        <item name="boxStrokeColor">@color/pink_outline_variant</item>
        <!-- FIX: was md_onSurfaceVariant -->
        <item name="hintTextColor">@color/pink_on_surface_variant</item>
    </style>

    <!-- ===== NAV HEADER (Circle Image) ===== -->
    <style name="CircleImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- SearchView colors (hint/text) -->
    <!-- FIX: parent cannot be "" -->
    <style name="ThemeOverlay.MyCloset.SearchView" parent="ThemeOverlay.Material3">
        <item name="android:textColorHint">@color/pink_on_surface_variant</item>
        <item name="android:textColorPrimary">@color/pink_on_surface</item>
        <item name="android:textColorSecondary">@color/pink_on_surface_variant</item>
    </style>

    <!-- Spinner basic -->
    <style name="Widget.MyCloset.Spinner" parent="@android:style/Widget.Spinner">
        <item name="android:popupBackground">@android:color/white</item>
    </style>

</resources>
