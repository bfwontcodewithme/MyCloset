<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MyCloset" parent="Theme.Material3.Light.NoActionBar">

        <!-- Primary -->
        <item name="colorPrimary">@color/pink_dark</item>
        <item name="colorOnPrimary">@color/pink_on_primary</item>
        <item name="colorPrimaryContainer">@color/pink_light</item>
        <item name="colorOnPrimaryContainer">@color/pink_on_surface</item>

        <!-- Secondary -->
        <item name="colorSecondary">@color/pink_primary</item>
        <item name="colorOnSecondary">@color/pink_on_primary</item>
        <item name="colorSecondaryContainer">@color/pink_surface_variant</item>
        <item name="colorOnSecondaryContainer">@color/pink_on_surface</item>

        <!-- Surface (IMPORTANT FIX) -->
        <item name="colorSurface">@color/pink_surface</item>
        <item name="colorOnSurface">@color/pink_on_surface</item>
        <item name="colorSurfaceVariant">@color/pink_surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/pink_on_surface_variant</item>

        <item name="colorOutline">@color/pink_outline</item>
        <item name="colorOutlineVariant">@color/pink_outline_variant</item>

        <!-- Error -->
        <item name="colorError">@color/md_error</item>
        <item name="colorOnError">@color/md_onError</item>

        <!-- Buttons -->
        <item name="materialButtonStyle">@style/Widget.MyCloset.Button</item>

        <!-- Dialog -->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.MyCloset.MaterialAlertDialog</item>

        <!-- System UI -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

    </style>

    <style
        name="ThemeOverlay.MyCloset.MaterialAlertDialog"
        parent="ThemeOverlay.Material3.MaterialAlertDialog" />

    <style name="Widget.MyCloset.Button" parent="Widget.Material3.Button">
        <item name="cornerRadius">16dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
