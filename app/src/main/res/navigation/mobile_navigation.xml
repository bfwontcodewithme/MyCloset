<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/nav_home">
    <action
        android:id="@+id/action_global_loginFragment"
        app:destination="@id/nav_login" />

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.mycloset.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_login"
        android:name="com.example.mycloset.ui.auth.LoginFragment"
        android:label="Sign In"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_nav_login_to_nav_register"
            app:destination="@+id/nav_register" />
        <action
            android:id="@+id/action_nav_login_to_nav_home"
            app:destination="@+id/nav_home" />
    </fragment>

    <fragment
        android:id="@+id/nav_register"
        android:name="com.example.mycloset.ui.auth.RegisterFragment"
        android:label="Register"
        tools:layout="@layout/fragment_register">

        <action
            android:id="@+id/action_nav_register_to_nav_home"
            app:destination="@id/nav_home"
            app:popUpTo="@id/nav_home"
            app:popUpToInclusive="true" />
    </fragment>

</navigation>