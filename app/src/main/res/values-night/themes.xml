<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MyCloset" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Primary -->
        <item name="colorPrimary">@color/pink_night_primary</item>
        <item name="colorOnPrimary">@color/pink_night_on_primary</item>
        <item name="colorPrimaryContainer">@color/pink_night_surface_variant</item>
        <item name="colorOnPrimaryContainer">@color/pink_night_on_surface</item>

        <!-- Secondary -->
        <item name="colorSecondary">@color/pink_night_primary</item>
        <item name="colorOnSecondary">@color/pink_night_on_primary</item>
        <item name="colorSecondaryContainer">@color/pink_night_surface_variant</item>
        <item name="colorOnSecondaryContainer">@color/pink_night_on_surface</item>

        <!-- Surface -->
        <item name="colorSurface">@color/pink_night_surface</item>
        <item name="colorOnSurface">@color/pink_night_on_surface</item>
        <item name="colorSurfaceVariant">@color/pink_night_surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/pink_night_on_surface_variant</item>

        <item name="colorOutline">@color/pink_night_outline</item>
        <item name="colorOutlineVariant">@color/pink_night_outline_variant</item>

        <!-- Error -->
        <item name="colorError">@color/md_error</item>
        <item name="colorOnError">@color/md_onError</item>

        <!-- System UI -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>

    </style>

</resources>
