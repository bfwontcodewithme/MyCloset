<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_gradient">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/space_l">

        <com.google.android.material.card.MaterialCardView
            style="@style/MyCloset.Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/space_l">

                <!-- Logo -->
                <ImageView
                    android:id="@+id/imgLogo"
                    android:layout_width="190dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:src="@drawable/mycloset_logo"
                    android:contentDescription="MyCloset Logo"
                    tools:ignore="ImageContrastCheck" />

                <TextView
                    android:id="@+id/tvTitle"
                    style="@style/MyCloset.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/space_m"
                    android:text="Sign in" />

                <TextView
                    style="@style/MyCloset.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/space_xs"
                    android:text="Welcome back — continue to your digital closet" />

                <!-- Email -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/MyCloset.TextField"
                    android:id="@+id/tilEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_l"
                    android:hint="Email"
                    app:startIconDrawable="@android:drawable/ic_dialog_email">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/md_background"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Password -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/MyCloset.TextField"
                    android:id="@+id/tilPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_m"
                    android:hint="Password"
                    app:startIconDrawable="@android:drawable/ic_lock_lock"
                    app:endIconMode="password_toggle">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:textColor="@color/md_background"/>
                </com.google.android.material.textfield.TextInputLayout>
                <!-- Forgot password -->

                <TextView
                    android:id="@+id/tvForgotPassword"
                    style="@style/MyCloset.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/space_s"
                    android:text="Forgot password?"
                    android:textColor="@color/md_primary"
                    android:padding="6dp" />

                <!-- Sign in -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLogin"
                    style="@style/MyCloset.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_m"
                    android:text="Sign in" />

                <!-- Divider -->
                <TextView
                    style="@style/MyCloset.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/space_m"
                    android:text="or" />

                <!-- Google -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGoogle"
                    style="@style/MyCloset.Button.Outlined"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_m"
                    android:text="Continue with Google" />

                <!-- Loading -->
                <ProgressBar
                    android:id="@+id/progressLogin"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/space_m"
                    android:visibility="gone" />

                <!-- Go Register -->
                <TextView
                    android:id="@+id/tvGoRegister"
                    style="@style/MyCloset.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/space_m"
                    android:text="Don’t have an account? Sign up"
                    android:textColor="@color/md_primary"
                    android:padding="8dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
