<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/bg_glitter">

    <!-- Header Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="22dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#CCFFFFFF"
        app:strokeWidth="1dp"
        app:strokeColor="#26AD1457"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="18dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvStylistTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stylist Home"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="#AD1457" />

            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Manage styling requests and update your availability"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="6dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp"
                android:background="#1FAD1457"/>

            <!-- Primary actions -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUpdateLocation"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="Update My Location"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:backgroundTint="#EC407A"
                app:cornerRadius="18dp"
                app:icon="@android:drawable/ic_menu_mylocation"
                app:iconTint="#FFFFFF"
                app:iconGravity="textStart"
                app:iconPadding="10dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStylistLogout"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="Logout"
                android:textAllCaps="false"
                android:textColor="#AD1457"
                android:layout_marginTop="12dp"
                app:cornerRadius="18dp"
                app:strokeWidth="2dp"
                app:strokeColor="#40AD1457"
                app:icon="@android:drawable/ic_lock_power_off"
                app:iconTint="#AD1457"
                app:iconGravity="textStart"
                app:iconPadding="10dp"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Filters title -->
    <TextView
        android:id="@+id/tvFiltersTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Filter requests"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="#AD1457"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@id/cardHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Filters as Chips -->
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/rowFilters"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:singleSelection="true"
        app:selectionRequired="true"
        app:chipSpacingHorizontal="10dp"
        app:chipSpacingVertical="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvFiltersTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.chip.Chip
            android:id="@+id/btnFilterAll"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All"
            android:checked="true"
            app:chipCornerRadius="18dp"
            app:chipBackgroundColor="#FFFFFF"
            app:chipStrokeColor="#40AD1457"
            app:chipStrokeWidth="1dp"
            android:textColor="#AD1457"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/btnFilterOpen"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open"
            app:chipCornerRadius="18dp"
            app:chipBackgroundColor="#FFFFFF"
            app:chipStrokeColor="#40AD1457"
            app:chipStrokeWidth="1dp"
            android:textColor="#AD1457"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/btnFilterInProgress"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In Progress"
            app:chipCornerRadius="18dp"
            app:chipBackgroundColor="#FFFFFF"
            app:chipStrokeColor="#40AD1457"
            app:chipStrokeWidth="1dp"
            android:textColor="#AD1457"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/btnFilterDone"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
            app:chipCornerRadius="18dp"
            app:chipBackgroundColor="#FFFFFF"
            app:chipStrokeColor="#40AD1457"
            app:chipStrokeWidth="1dp"
            android:textColor="#AD1457"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/btnFilterCancelled"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelled"
            app:chipCornerRadius="18dp"
            app:chipBackgroundColor="#FFFFFF"
            app:chipStrokeColor="#40AD1457"
            app:chipStrokeWidth="1dp"
            android:textColor="#AD1457"/>
    </com.google.android.material.chip.ChipGroup>

    <!-- Empty state -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardEmpty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:cardCornerRadius="18dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#CCFFFFFF"
        app:strokeWidth="1dp"
        app:strokeColor="#1FAD1457"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/rowFilters"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvEmptyRequests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No styling requests yet"
            android:textSize="15sp"
            android:textColor="#666666"
            android:gravity="center"
            android:padding="18dp"/>
    </com.google.android.material.card.MaterialCardView>


    <!-- List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvStylingRequests"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:clipToPadding="false"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/rowFilters"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>