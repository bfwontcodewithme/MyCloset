<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFF7FA">

    <TextView
        android:id="@+id/tvSharedClosetDetailsTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Shared Closet"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#AD1457"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvSharedClosetDetailsSub"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Pick items to suggest..."
        android:textColor="#6B6B6B"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/tvSharedClosetDetailsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSharedClosetItems"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvSharedClosetDetailsSub"
        app:layout_constraintBottom_toTopOf="@id/btnSendClosetSuggestion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnSendClosetSuggestion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Send Suggestion"
        android:textColor="#FFFFFF"
        android:backgroundTint="#8E24AA"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toTopOf="@id/progressSharedClosetDetails"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ProgressBar
        android:id="@+id/progressSharedClosetDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
