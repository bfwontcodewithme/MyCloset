<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardSharedOutfit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="18dp"
    app:cardUseCompatPadding="true"
    app:strokeWidth="1dp"
    app:strokeColor="#14000000"
    app:cardElevation="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp">

        <!-- Small icon -->
        <ImageView
            android:id="@+id/ivSharedOutfitIcon"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:contentDescription="@string/app_name"
            android:src="@android:drawable/ic_menu_gallery"
            android:alpha="0.85"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Title -->
        <TextView
            android:id="@+id/tvSharedOutfitTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Outfit Name"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#111111"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@id/ivSharedOutfitIcon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnSuggestOutfit" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tvSharedOutfitSub"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Shared by: ..."
            android:textSize="13sp"
            android:textColor="#6B6B6B"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toEndOf="@id/ivSharedOutfitIcon"
            app:layout_constraintTop_toBottomOf="@id/tvSharedOutfitTitle"
            app:layout_constraintEnd_toStartOf="@id/btnSuggestOutfit" />

        <!-- Suggest button (modern outlined) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSuggestOutfit"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Suggest"
            android:textAllCaps="false"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            app:cornerRadius="14dp"
            app:icon="@android:drawable/ic_menu_send"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
