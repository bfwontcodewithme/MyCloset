<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/bg_glitter">

    <!-- Title -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="My Closets"
        android:textAppearance="?attr/textAppearanceHeadlineSmall"
        android:textColor="@color/pink_on_surface"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Subtitle -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvClosetsSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Create, rename and manage your closets"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:textColor="@color/pink_on_surface_variant"
        android:alpha="0.85"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- List container (glass) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardClosetsList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#CCFFFFFF"
        app:strokeWidth="1dp"
        app:strokeColor="@color/pink_outline_variant"
        app:layout_constraintTop_toBottomOf="@id/tvClosetsSubtitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvClosets"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:clipToPadding="false"
                android:paddingBottom="90dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvEmptyClosets"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="No closets yet. Tap + to add one."
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="@color/pink_on_surface_variant"
                android:gravity="center"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddCloset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Add Closet"
        app:srcCompat="@android:drawable/ic_input_add"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:backgroundTint="@color/pink_dark"
        app:tint="@android:color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>
