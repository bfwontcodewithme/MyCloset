<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFF1F6">

    <TextView
        android:id="@+id/tvSendSugTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Send Suggestion"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#AD1457"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvSendSugSub"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="You are suggesting changes to an outfit"
        android:textColor="#666666"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/tvSendSugTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/etSendSugNote"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Optional noteâ€¦"
        android:background="@android:drawable/edit_text"
        android:padding="12dp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@id/tvSendSugSub"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnSendSug"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Send Suggestion"
        android:backgroundTint="#8E24AA"
        android:textColor="#FFFFFF"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@id/etSendSugNote"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ProgressBar
        android:id="@+id/progressSendSug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@id/btnSendSug"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
