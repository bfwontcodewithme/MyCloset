<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFF1F6">

    <TextView
        android:id="@+id/tvFriendSuggestTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Suggest Outfit"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#AD1457"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvFriendSuggestInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="..."
        android:textColor="#666666"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/tvFriendSuggestTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFriendPickItems"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvFriendSuggestInfo"
        app:layout_constraintBottom_toTopOf="@id/btnSubmitSuggestion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnSubmitSuggestion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Submit Suggestion"
        android:backgroundTint="#8E24AA"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@id/progressFriendSuggest"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ProgressBar
        android:id="@+id/progressFriendSuggest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
