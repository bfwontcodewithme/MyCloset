<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="#1FAD1457"
    app:cardBackgroundColor="#CCFFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">

        <!-- Top row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvReqEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="email@gmail.com"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#AD1457" />

            <!-- Unread badge -->
            <TextView
                android:id="@+id/tvReqUnread"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="3"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:background="@android:color/holo_red_dark"
                android:visibility="gone"/>
        </LinearLayout>

        <!-- Status + date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvReqStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: OPEN"
                android:textStyle="bold"
                android:textColor="#444444"
                android:textSize="13sp" />

            <View
                android:layout_width="10dp"
                android:layout_height="1dp" />

            <TextView
                android:id="@+id/tvReqDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date: -"
                android:textColor="#777777"
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvReqNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Note: -"
            android:textColor="#555555"
            android:textSize="13sp"
            android:layout_marginTop="8dp"
            android:visibility="gone"/>

        <!-- Last message preview -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvReqLastMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Last message preview..."
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="#666666"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvReqLastTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:30"
                android:textColor="#666666"
                android:textSize="12sp"
                android:layout_marginStart="10dp"
                android:visibility="gone"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="12dp"
            android:background="#12AD1457"/>

        <!-- Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCopyEmail"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="46dp"
                    android:layout_weight="1"
                    android:text="Copy Email"
                    android:textAllCaps="false"
                    android:textColor="#AD1457"
                    app:cornerRadius="14dp"
                    app:strokeWidth="2dp"
                    app:strokeColor="#33AD1457" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEmailCustomer"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="0dp"
                    android:layout_height="46dp"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:text="Email"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#EC407A"
                    app:cornerRadius="14dp" />
            </LinearLayout>

            <!-- Row 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAccept"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="0dp"
                    android:layout_height="46dp"
                    android:layout_weight="1"
                    android:text="Accept"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#8E24AA"
                    app:cornerRadius="14dp"
                    android:visibility="gone"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDone"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="0dp"
                    android:layout_height="46dp"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:text="Done"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#2E7D32"
                    app:cornerRadius="14dp"
                    android:visibility="gone"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnChat"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="0dp"
                    android:layout_height="46dp"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:text="Chat"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#1565C0"
                    app:cornerRadius="14dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
