<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MyCloset.Card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/pink_outline_variant">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Avatar circle (simple) -->
        <TextView
            android:id="@+id/tvAvatar"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="ðŸ‘¤"
            android:textSize="18sp"
            android:background="@drawable/bg_avatar_circle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tvReqTitle"
            style="@style/MyCloset.Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Friend request"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/tvAvatar"
            app:layout_constraintTop_toTopOf="@id/tvAvatar"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/tvReqSub"
            style="@style/MyCloset.Caption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="from@email.com"
            app:layout_constraintStart_toStartOf="@id/tvReqTitle"
            app:layout_constraintTop_toBottomOf="@id/tvReqTitle"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="2dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAccept"
            style="@style/MyCloset.Button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="Accept"
            app:layout_constraintStart_toStartOf="@id/tvReqTitle"
            app:layout_constraintTop_toBottomOf="@id/tvReqSub"
            app:layout_constraintEnd_toStartOf="@id/btnDecline"
            app:layout_constraintWidth_percent="0.48"
            android:layout_marginTop="10dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDecline"
            style="@style/MyCloset.Button.Outlined"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="Decline"
            app:layout_constraintStart_toEndOf="@id/btnAccept"
            app:layout_constraintTop_toTopOf="@id/btnAccept"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.48"
            android:layout_marginStart="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
