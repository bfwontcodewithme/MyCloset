<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/bg_glitter">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvClosetTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="My Closet"
        android:textAppearance="?attr/textAppearanceHeadlineSmall"
        android:textColor="@color/pink_on_surface"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvClosetSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Quick actions"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:textColor="@color/pink_on_surface_variant"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/tvClosetTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardClosetActions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        app:cardCornerRadius="20dp"
        app:cardUseCompatPadding="true"
        app:strokeWidth="1dp"
        app:strokeColor="@color/pink_outline_variant"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#CCFFFFFF"
        app:layout_constraintTop_toBottomOf="@id/tvClosetSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewItems"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Items"
                android:textAllCaps="false"
                android:backgroundTint="@color/pink_dark"
                android:textColor="@android:color/white"
                app:cornerRadius="16dp"
                app:icon="@android:drawable/ic_menu_view"
                app:iconTint="@android:color/white"
                app:iconGravity="textStart"
                app:iconPadding="10dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddGarment"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Item"
                android:textAllCaps="false"
                android:layout_marginTop="10dp"
                app:cornerRadius="16dp"
                app:strokeColor="@color/pink_dark"
                android:textColor="@color/pink_dark"
                app:icon="@android:drawable/ic_menu_camera"
                app:iconTint="@color/pink_dark"
                app:iconGravity="textStart"
                app:iconPadding="10dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCreateOutfit"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create Outfit"
                android:textAllCaps="false"
                android:layout_marginTop="10dp"
                app:cornerRadius="16dp"
                app:strokeColor="@color/pink_dark"
                android:textColor="@color/pink_dark"
                app:icon="@android:drawable/ic_menu_edit"
                app:iconTint="@color/pink_dark"
                app:iconGravity="textStart"
                app:iconPadding="10dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnShareCloset"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Share Closet"
                android:textAllCaps="false"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/pink_primary"
                android:textColor="@color/pink_on_surface"
                app:cornerRadius="16dp"
                app:icon="@android:drawable/ic_menu_share"
                app:iconTint="@color/pink_on_surface"
                app:iconGravity="textStart"
                app:iconPadding="10dp"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
