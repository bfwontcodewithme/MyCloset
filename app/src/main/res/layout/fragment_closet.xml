<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#FFF1F6">

    <TextView
        android:id="@+id/tvClosetTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Closet"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#AD1457"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnViewItems"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="View Items"
        android:backgroundTint="#EC407A"
        android:textColor="#FFFFFF"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvClosetTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnAddGarment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Add Item"
        android:backgroundTint="#D81B60"
        android:textColor="#FFFFFF"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnViewItems"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnCreateOutfit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Create Outfit"
        android:backgroundTint="#AD1457"
        android:textColor="#FFFFFF"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnAddGarment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- âœ… NEW: Share closet -->
    <Button
        android:id="@+id/btnShareCloset"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Share Closet"
        android:backgroundTint="#8E24AA"
        android:textColor="#FFFFFF"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnCreateOutfit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
