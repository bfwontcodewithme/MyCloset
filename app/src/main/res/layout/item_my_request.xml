<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="12dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">

        <!-- Header row: status + unread badge -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvMyReqStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Status: OPEN"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <!-- ✅ Unread badge (for user) -->
            <TextView
                android:id="@+id/tvMyReqUnread"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="2"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:background="@android:color/holo_red_dark"
                android:visibility="gone"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvMyReqDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Date: -"/>

        <TextView
            android:id="@+id/tvMyReqNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Note:"/>

        <TextView
            android:id="@+id/tvMyReqStylist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Stylist: -"/>

        <!-- ✅ Last message row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvMyReqLastMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Last message preview..."
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tvMyReqLastTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:30"
                android:textColor="#666666"
                android:textSize="12sp"
                android:layout_marginStart="10dp"
                android:visibility="gone"/>
        </LinearLayout>

        <!-- Cancel button (only for OPEN) -->
        <Button
            android:id="@+id/btnCancelRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Cancel"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btnOpenChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Chat" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
