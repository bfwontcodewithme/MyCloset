<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/md_surfaceVariant">

    <TextView
        android:id="@+id/tvPickItemsTitle"
        style="@style/MyCloset.Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Share Closet Subset"
        android:textColor="@color/md_onSurface"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvPickItemsSub"
        style="@style/MyCloset.Caption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Choose items..."
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/tvPickItemsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardPickItems"
        style="@style/MyCloset.Card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        app:cardElevation="2dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/md_outlineVariant"
        app:layout_constraintTop_toBottomOf="@id/tvPickItemsSub"
        app:layout_constraintBottom_toTopOf="@id/btnConfirmShareItems"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPickItems"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"/>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnConfirmShareItems"
        style="@style/MyCloset.Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:enabled="false"
        android:text="Share selected items"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardPickItems" />

    <ProgressBar
        android:id="@+id/progressPickItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/btnConfirmShareItems"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
