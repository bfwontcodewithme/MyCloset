<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardSuggestion"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="18dp"
    app:cardUseCompatPadding="true"
    app:strokeWidth="1dp"
    app:strokeColor="#14000000"
    app:cardElevation="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp">

        <!-- Icon -->
        <ImageView
            android:id="@+id/ivSuggestionIcon"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@android:drawable/ic_dialog_info"
            android:alpha="0.85"
            android:contentDescription="@string/app_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Title -->
        <TextView
            android:id="@+id/tvSuggestionRowTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="From: Friend • PENDING"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#111111"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/ivSuggestionIcon"
            app:layout_constraintTop_toTopOf="@id/ivSuggestionIcon"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tvSuggestionRowSub"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Items: 3 • Note: ..."
            android:textSize="13sp"
            android:textColor="#6B6B6B"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="6dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/ivSuggestionIcon"
            app:layout_constraintTop_toBottomOf="@id/tvSuggestionRowTitle"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Open (primary) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnOpenSuggestion"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:text="Open"
            android:textAllCaps="false"
            app:cornerRadius="14dp"
            app:icon="@android:drawable/ic_menu_view"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvSuggestionRowSub"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Accept (outlined) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAcceptRow"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:text="Accept"
            android:textAllCaps="false"
            app:cornerRadius="14dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/btnOpenSuggestion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnRejectRow"
            app:layout_constraintWidth_percent="0.48" />

        <!-- Reject (outlined) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRejectRow"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:text="Reject"
            android:textAllCaps="false"
            app:cornerRadius="14dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/btnOpenSuggestion"
            app:layout_constraintStart_toEndOf="@id/btnAcceptRow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.48" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
